extends ../_layouts/layout
block title
    | Main Page
block content
    section.breadcrumbs
        .container
            ul.breadcrumbs__list
                each breadcrumb, indx in ['Главная', 'Каталог', 'iPad Air Wi-Fi + Cellular 128gb - silver']
                    li(class="breadcrumbs__item " + ((indx == 2) ? "active" : ""))
                        a(href="#").breadcrumbs__link= breadcrumb
    section.product
        .container
            .product__pic
                .product__slideshow
                    .product__slideshow-display
                        img(src="/img/elements/1.png")
                    .product__slideshow-slider
                        ul.product__slider-list
                            li.product__slider-item
                                a(href="#").product__slider-link
                                    img(src="/img/elements/1.png")
                            li.product__slider-item
                                a(href="#").product__slider-link
                                    img(src="/img/elements/3.jpg")
                            li.product__slider-item
                                a(href="#").product__slider-link
                                    img(src="/img/elements/4.jpg")
            .product__text
                .product__text-title iPad Air Wi-Fi + Cellular 128GB - Silver
                .product__text-options
                    table.product__text-table
                        tr
                            td Артикул
                            td 4234352525
                        tr
                            td Опция
